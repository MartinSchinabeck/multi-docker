{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name":"client",
            "image": "martinschinabeck/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        }, 
        {
            "name": "server", 
            "image": "martinschinabeck/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "martinschinabeck/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        }, 
        {
            "name": "nginx", 
            "image": "martinschinabeck/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMaAppings": [
                {
                    "hostPort": 80, 
                    "containerPort": 80
                }
            ],
            "links": [
                "client", "server"
            ],
            "memory": 128

        }

    ]
}